<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Game block</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="datetime" type="DateTime">
      <label>Date and time</label>
      <config>
        <timezone>true</timezone>
      </config>
      <occurrences minimum="1" maximum="1"/>
    </input>
    <input name="datetimeEnd" type="DateTime">
      <label>Date and time end</label>
      <config>
        <timezone>true</timezone>
      </config>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="title" type="TextLine">
      <label>Title for games' in block</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="description" type="HtmlArea">
      <label>Description for games' in block</label>
      <config>
        <exclude>*</exclude>
        <include>AlignLeft AlignRight | Bold Italic</include>
      </config>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="blockType" type="ComboBox">
      <label>Block type</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <option value="day">Day</option> 
        <option value="block">Block</option>
      </config>
      <default>one</default> 
    </input>
    <input name="blockNumber" type="ComboBox">
      <label>Block number</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="1">1</option> 
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </config>
      <default>one</default> 
    </input>
    <input name="language" type="ComboBox">
      <label>Predefined language for games</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="en">En</option>
        <option value="ua">UA</option>
        <option value="ru">RU</option>
      </config>
    </input>
    <input name="system" type="ComboBox">
      <label>Preselected system. For game blocks only</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="dnd5">Dungeons &amp; Dragons 5e</option>
        <option value="vtm20">Vampire: The Masquerade V20 (Вапмирский Маскарад Классические правила)</option>
        <option value="vtm5">Vampire: The Masquerade 5th Edition</option>
        <option value="pathfinder1">Pathfinder 1e</option>
        <option value="pathfinder2">Pathfinder 2e</option>
        <option value="shadowrun">Shadowrun</option>
        <option value="cyberpunkRed">Cyberpunk RED</option>
        <option value="cyberpunk2020">Cyberpunk 2020</option>
        <option value="wfrp">Warhammer Fantasy Role Play</option>
        <option value="w40kwg">Warhammer 40k Wrath &amp; Glory</option>
        <option value="coc">Call of Cthulhu (Зов Ктулху)</option>
        <option value="coriolis">Coriolis (Кориолси)</option>
        <option value="talesFromTheLoop">Tales from the Loop (Тайны Эхосферы)</option>
        <option value="mutanYearZero">Mutan Year Zero (Мутанты - Точка Отчета)</option>
        <option value="bladesInTheDark">Blades in the Dark (Клинки во Тьме)</option>
        <option value="morkBorg">Mörk Borg</option>
        <option value="shinobi">Шиноби</option>
        <option value="fate">FATE</option>
        <option value="trailOfCthulhu">Ктулху (Trail of Cthulhu)</option>
        <option value="cavalry">Кавалерия</option>
        <option value="enoa">ЭНОА</option>
      </config>
    </input>
  </form>
</content-type>