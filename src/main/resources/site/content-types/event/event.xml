<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Festival Event</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="datetime" type="DateTime">
      <label>Date and time</label>
      <config>
        <timezone>true</timezone>
      </config>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="datetimeEnd" type="DateTime">
      <label>Date and time end</label>
      <config>
        <timezone>true</timezone>
      </config>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="description" type="HtmlArea">
      <label>Form description</label>
      <config>
        <exclude>*</exclude>
        <include>AlignLeft AlignRight | Bold Italic</include>
      </config>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="location" type="ComboBox">
      <label>Location</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="Мега Лекторий">Мега Лекторий</option> 
        <option value="Гипер Лекторий">Гипер Лекторий</option>
        <option value="Башня">Башня</option>
      </config>
      <default>one</default> 
    </input>
    <input name="url" type="TextLine">
      <label>URL</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</content-type>